<link rel="stylesheet" href="/css/ejercicio/ejercicioEditar.css">
{{#each lista}}
<form action="/ejercicio/Editar/{{ejercicio_id}}" method="post">
    {{/each}}
    <div id="contenido">
        <div id="fondo">
            <img src="/img/FondoF.png" alt="">
        </div>
        <div id="contenedor">
            <div id="titulo">
                <p>Editar</p>
            </div>
            {{#each lista}}
            <div>
                <label id="nombre_ejercicio">Nombre ejercicio:</label>
                <input name="nombre_ejercicio" id="nombre_ejercicios" checked type="text" value="{{nombre_ejercicio}}">
            </div>
            <div>
                <label id="descripcion">Descripcion :</label>
                <input name="descripcion" id="descripciones" checked type="text" value="{{descripcion}}">
            </div>
            <div>
                <label id="calificacion">Calificacion:</label>
                <input name="calificacion" id="calificaciones" checked type="text" value="{{calificacion}}">
            </div>
            {{/each}}
            <div id="editar">
                <button type="submit">Editar</button>
            </div>
        </div>
    </div>
</form>