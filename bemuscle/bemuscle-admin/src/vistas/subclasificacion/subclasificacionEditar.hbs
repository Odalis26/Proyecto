<link rel="stylesheet" href="/css/subclasificacion/subclasificacion.css">
{{#each lista}}
<form action="/subclasificacion/Editar/{{sub_clasificacion_id}}" method="post">
    {{/each}}
    <div id="contenido" class="row g-3">
        <div id="titulo">
            <p>Subclasificacion</p>
        </div>
        {{#each lista}}
        <label>Nombre: </label>
        <div id="nombre_sub_clasificacion" class="col-auto">
            <input name="nombre_sub_clasificacion" class="form-control" id="nombre_sub_clasificaciones" checked
                type="text" value="{{nombre_sub_clasificacion}}">
        </div>
        <label>Descripci√≥n: </label>
        <div id="descripcion_sub_clasificacion" class="col-auto">
            <input name="descripcion_sub_clasificacion" class="form-control" id="descripcion_sub_clasificaciones" checked
                type="text" value="{{descripcion_sub_clasificacion}}">
        </div>
        {{/each}}
        <div id="editar" class="col-auto">
            <button type="submit" class="btn btn-primary mb-3">Editar</button>
        </div>
    </div>
</form>